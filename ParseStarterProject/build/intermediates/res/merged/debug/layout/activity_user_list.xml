<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.UserList">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/leaderimage"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Leaderboard"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="leaderBoard" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Fish On!"
        android:id="@+id/button5"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/button"
        android:onClick="fishOn" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Delete Fish"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="deleteObject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tournament Info/Website"
        android:id="@+id/tourneyInfo"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="30dp"
        android:textColor="#0a9536" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out"
        android:id="@+id/button7"
        android:onClick="logOut"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

</RelativeLayout>
