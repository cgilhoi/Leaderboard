<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.FishDetails">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fishLength"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:hint="weight of fish in lbs."
        android:textSize="30dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Submit"
        android:id="@+id/fishButton"
        android:layout_below="@+id/fishLength"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="fishDetails" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Submit with Photo"
        android:id="@+id/button4"
        android:onClick="submitWithPhoto"
        android:layout_below="@+id/fishButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />
</RelativeLayout>
