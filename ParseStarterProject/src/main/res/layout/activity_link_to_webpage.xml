<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.LinkToWebpage">

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Link to Website"
        android:id="@+id/linkButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="linkWeb" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Don&apos;t Link to Website"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/linkButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="noLinkWeb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webPageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:hint="enter web address"
        android:textSize="30dp" />

</RelativeLayout>
